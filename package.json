{
  "name": "@smoljs/monorepo",
  "version": "0.0.1",
  "description": "Yet Another Smol JavaScript Framework",
  "author": "@Razz21",
  "license": "MIT",
  "files": [
    "packages"
  ],
  "scripts": {
    "build:packages": "pnpm --filter \"./packages/*\" build",
    "lint": "biome ci .",
    "lint:fix": "biome lint --apply .",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": [],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "3.0.4",
    "happy-dom": "^16.7.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "typescript": "^5.5.4",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.0.0",
  "lint-staged": {
    "*.{js,cjs,mjs,ts,tsx}": [
      "biome lint --apply --no-errors-on-unmatched"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  }
}